<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">


        <Grid x:Name="greed" RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*,*,*">
            <Border BackgroundColor="Cyan" Grid.ColumnSpan="4">
                <Label x:Name="theoutput" Text="enter equation" FontSize="Large"></Label>
            </Border>

        <Button Grid.Row="1" Grid.Column="3" Text="+" Clicked="inp"></Button>
        <Button Grid.Row="2" Grid.Column="3" Text="-" Clicked="inp"></Button>
        <Button Grid.Row="3" Grid.Column="3" Text="=" Clicked="inp"></Button>

            <Button Grid.Row="1" Grid.Column="0" Text="1" Clicked="inp"></Button>
        <Button Grid.Row="1" Grid.Column="1" Text="2" Clicked="inp"></Button>
        <Button Grid.Row="1" Grid.Column="2" Text="3" Clicked="inp"></Button>
        <Button Grid.Row="2" Grid.Column="0" Text="4" Clicked="inp"></Button>
        <Button Grid.Row="2" Grid.Column="1" Text="5" Clicked="inp"></Button>
        <Button Grid.Row="2" Grid.Column="2" Text="6" Clicked="inp"></Button>
        <Button Grid.Row="3" Grid.Column="0" Text="7" Clicked="inp"></Button>
        <Button Grid.Row="3" Grid.Column="1" Text="8" Clicked="inp"></Button>
        <Button Grid.Row="3" Grid.Column="2" Text="9" Clicked="inp"></Button>
        </Grid>


</ContentPage>
